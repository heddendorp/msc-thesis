{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
