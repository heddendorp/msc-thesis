{
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
