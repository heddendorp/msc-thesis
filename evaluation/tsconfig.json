{
    "compilerOptions": {
      "rootDir": ".",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "forceConsistentCasingInFileNames":true,
      "strict": true,
      "sourceMap": true,
      "lib": ["ESNext"],
      "outDir": "dist"
    },
    "include": ["src/**/*"]
  }
  